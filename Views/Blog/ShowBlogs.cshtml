@model List<Blog>
@{
    ViewData["Title"] = "Show Blogs";
    var blogList = new SelectList(Model, "Id", "Title");
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Select a Blog to Edit</h1>

    <!-- Check if there are any blogs available -->
    @if (Model.Any())
    {
        <form action="EditBlog" method="post">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <!-- Add a card for styling -->
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="form-group">
                                <!-- Label for the select element -->
                                <label for="blogSelect">Choose a Blog:</label>

                                <!-- Styled select element -->
                                <select asp-items="blogList" name="blogId" id="blogSelect" class="form-control"> </select>
                            </div>

                            <!-- Submit button with Bootstrap styling -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary mt-3">Edit Blog</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
    else
    {
        <!-- Message for no blogs available -->
        <div class="alert alert-warning" role="alert">
            No blogs are available to edit at the moment.
        </div>
    }
</div>
<br />
<partial src="_ValidationScriptsPartial"></partial>