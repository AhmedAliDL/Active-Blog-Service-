@model BlogForEditingOrAddingViewModel
@{
    ViewData["Title"] = "Blog Add Page";
}

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header">
                                <h3 class="text-center font-weight-light my-4">Create Blog</h3>
                            </div>
                            <div class="card-body">
                                <form method="post" asp-action="Add" enctype="multipart/form-data">
                                    <!-- Display validation errors -->
                                    <div asp-validation-summary="All" class="text-danger mt-3"></div>

                                    <!-- Blog Title -->
                                    <div class="form-floating mb-3">
                                        <input asp-for="Title" class="form-control" placeholder="Enter Title" />
                                        <label asp-for="Title">Blog Title</label>
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>

                                    <!-- Blog Category -->
                                    <div class="form-floating mb-3">
                                        <input asp-for="Category" class="form-control" placeholder="Enter Category" />
                                        <label asp-for="Category">Blog Category</label>
                                        <span asp-validation-for="Category" class="text-danger"></span>
                                    </div>

                                    <!-- Blog Image -->
                                    <div class="form-floating mb-3">
                                        <span>Upload Blog Image:</span>
                                        <input asp-for="ImageFile" id="inputImage" type="file" accept="image/*" placeholder="Upload Image" />
                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    </div>

                                    <!-- Quill Editor for Blog Content -->
                                    <div id="editor-container" style="height: 200px;">
                                        <!-- The editor will be initialized here -->
                                    </div>

                                    <!-- Hidden input to store the blog content -->
                                    <input asp-for="BlogContent" type="hidden" />
                                    <span asp-validation-for="BlogContent" class="text-danger"></span>

                                    <!-- Submit Button -->
                                    <div class="mt-4 mb-0">
                                        <div class="d-grid">
                                            <input type="submit" class="btn btn-primary btn-block" value="Publish Blog" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        </main>
    </div>
</div>

<!-- Include Quill.js -->
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>

<!-- Initialize Quill Editor -->
<script>
    // Initialize Quill editor
    var quill = new Quill('#editor-container', {
        theme: 'snow',  // Snow theme is a clean and simple interface
        placeholder: 'Write your blog content here...',
        modules: {
            toolbar: [
                [{ 'header': [1, 2, false] }],
                ['bold', 'italic', 'underline'],        // toggled buttons
                ['link', 'blockquote', 'code-block'],
                [{ 'list': 'ordered' }, { 'list': 'bullet' }],
                [{ 'align': [] }],
                ['clean']                              // remove formatting button
            ]
        }
    });

    // On form submission, set the hidden input field with the editor's content
    document.querySelector('form').onsubmit = function () {
        document.querySelector('input[name="BlogContent"]').value = quill.root.innerHTML;
    };
</script>

<!-- Bootstrap scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="/js/scripts.js"></script>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}