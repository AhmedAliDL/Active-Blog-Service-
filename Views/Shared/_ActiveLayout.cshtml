<body class="index-page">

    <header id="header" class="header d-flex align-items-center sticky-top">
        <div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

            <a asp-action="Index" asp-controller="Home" class="logo d-flex align-items-center">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="/img/logo.png" alt=""> -->
                <h1 class="sitename">Active</h1>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a asp-action="Index" asp-controller="Home" class="active">Home</a></li>
                    <li><a asp-action="Index" asp-controller="About">About</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {

                        <li><a asp-action="Index" asp-controller="Employee">Team</a></li>
                        <li class="dropdown">
                            <a href="#"><span>Blog</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                            <ul>
                                <li><a asp-action="Index" asp-controller="Blog" >View Blog</a></li>
                                <li><a asp-action="Add" asp-controller="Blog" >Add Blog</a></li>
                                <li><a asp-action="ShowBlogs" asp-controller="Blog">Edit Blog</a></li>
                                <li><a asp-action="DeleteBlog" asp-controller="Blog" class="text-danger">Delete Blog</a></li>
                            </ul>

                        </li>
                        <li><a asp-action="Index" asp-controller="Contact">Contact</a></li>
                        <li class="dropdown">
                            <a href="#"><span>Account</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                            <ul>
                                <li class="dropdown">
                                    <a href="#"><span>Profile</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                                    <ul>
                                        <li><a asp-action ="Index" asp-controller ="Account">View Profile</a></li>
                                        <li><a asp-action ="Edit" asp-controller ="Account">Edit Profile</a></li>

                                    </ul>
                                </li>
                                <li><a asp-action="Logout" asp-controller="Account" class="text-danger">Logout</a></li>
                            </ul>

                        </li>

                    }

                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

        </div>
    </header>

    <main class="main">
        <partial src="_ValidationScriptsPartial"></partial>
        @RenderBody()

    </main>

    <footer id="footer" class="footer light-background">
        <div class="container">
            <div class="row g-4 justify-content-center">
                <div class="col-md-6 col-lg-3 mb-3 mb-md-0">
                    <div class="widget text-center">
                        <h3 class="widget-heading">About Us</h3>
                        <p class="mb-4">
                            Our goal is to provide valuable content that informs, engages, and inspires. Dive in and join our community of curious readers!
                        </p>
                        <p class="mb-0">
                            <a href="About/Index" class="btn-learn-more">Learn more</a>
                        </p>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 ps-lg-5 mb-3 mb-md-0">
                    <div class="widget">
                        <h3 class="widget-heading">Navigation</h3>
                        <ul class="list-unstyled float-start me-5">
                            <li><a href="Home/Index">Overview</a></li>
                            <li><a href="About/Index">About Us</a></li>
                            <li><a href="Contact/Index">Contact</a></li>
                        </ul>
                        <ul class="list-unstyled float-start">
                            <li><a href="Employee/Index">Team</a></li>
                            <li><a href="Blog/Index">Blog</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3 pl-lg-5">
                    <div class="widget text-center">
                        <h3 class="widget-heading">Recent Posts</h3>
                        <ul class="list-unstyled footer-blog-entry d-inline-block">
                            @foreach (var blog in recentBlogs)
                            {
                                <li>
                                    <span class="d-block date">@blog.CreatedDate.ToString("MMMM dd, yyyy")</span>
                                    <a href="Blog/Details/@blog.Id">@blog.Title</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="copyright d-flex flex-column flex-md-row align-items-center justify-content-md-between">
                <p>© <span>Copyright</span> <strong class="px-1 sitename">Active.</strong> <span>All Rights Reserved</span></p>
